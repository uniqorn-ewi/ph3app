<section class="bg-light" id="team">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <!-- h5 class="section-heading text-uppercase">Our Amazing Team</h5 -->
        <!-- h6 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h6 -->
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4"></div>

      <div class="col-sm-4">
        <div class="team-member">
<% if !@user.avatar.file.nil? && @user.avatar.file.exists? %>
<%= image_tag(@user.avatar.url, class: "mx-auto rounded-circle", alt: "アイコン画像") %>
<% else %>
<%= image_tag("/assets/no_image.png", class: "mx-auto rounded-circle", alt: "アイコン画像") %>
<% end %>
          <h5><%= @user.name %></h5>
          <p class="text-muted">メールアドレス: <%= @user.email %></p>
          <ul class="list-inline">
            <li class="list-inline-item">
<%= link_to "お気に入りのpictureの一覧", \
    user_favorite_pictures_path(user_id: @user.id), \
    class: 'btn-default' %>
            </li>
          </ul>
        </div>
      </div>

      <div class="col-sm-4"></div>
    </div>

    <div class="row">
      <div class="col-lg-8 mx-auto text-center">
        <!-- p class="large text-muted">Lorem ipsum deaque, corporis ea, alias ut unde.</p -->
      </div>
    </div>
  </div>
</section>
