<header class="_mainc ">
  <section class="_o6mpc">
    <span class="_ienqf">
      <h1 class="_rf3jb notranslate"><%= @user.name %>のお気に入り一覧</h1>
    </span>
    <span class="notice"><%= notice %></span>
  </section>
</header>

<article>
  <div>
    <section class="bg-light" id="portfolio">
      <span class="container">
        <span class="row">
          
          <!-- loop for Portfolio -->
          <% @favorite_pictures.each do |picture| %>
          <div class="col-md-4 col-sm-6 portfolio-item">
            <a class="portfolio-link" href="<%= picture_path(picture.id) %>">
              <div class="portfolio-hover">
                <div class="portfolio-hover-content">
                  <i class="fa fa-plus fa-3x"></i>
                </div>
              </div>
              <% unless picture.image.thumb.file.nil? %>
              <%= image_tag(picture.image.thumb.url, class: "img-fluid", alt: "") %>
              <% else %>
              <%= image_tag("/assets/no_image.png",  class: "img-fluid", alt: "") %>
              <% end %>
            </a>
            
            <div class="portfolio-caption">
              <p><%= picture.comment %></p>
              <ul class="list-inline">
                <li><%= picture.created_at %></li>
                <li>投稿者: <%= picture.user.name %></li>
                <li>
                  <% unless picture.user.avatar.thumb.file.nil? %>
                  <%= image_tag(picture.user.avatar.thumb.url) %>
                  <% else %>
                  <%= image_tag("/assets/no_image.png") %>
                  <% end %>
                </li>
              </ul>
              <div>
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <%= link_to "お気に入り解除する", favorite_path(id: picture.id), \
                        method: :delete, class: 'btn-danger nav-link' %>
                  </li>
                </ul>
              </div>
              
            </div>
          </div>
          <% end %>
          <!-- loop for Portfolio -->
          
        </span>
      </span>
    </section>
  </div>
</article>
